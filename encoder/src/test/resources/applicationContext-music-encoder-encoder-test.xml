<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
  default-autowire="byName">

	<bean id="flacDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
			<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
			<property name="url" value="jdbc:mysql://localhost/slimserver"/>
			<property name="username" value="slimserver"/>
			<property name="password" value="slimserver"/>
	</bean>

	<bean id="maximumThreads" class="java.lang.Integer">
		<constructor-arg value="8"/>
	</bean>

	<bean id="deviceService" class="uk.co.unclealex.music.encoder.service.TestDeviceService"/>
</beans>

