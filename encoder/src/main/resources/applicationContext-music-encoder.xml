<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd"
	default-autowire="byName">
	
	<import resource="classpath*:applicationContext-music-album-covers.xml"/>
	
	<bean id="encoderService" class="uk.co.unclealex.music.encoder.service.EncoderServiceImpl">
		<property name="encodingEventListeners">
			<list/>
		</property>
	</bean>
	
	<bean id="maximumThreads" class="java.lang.Integer">
		<constructor-arg value="8"/>
	</bean>
</beans>
