<?xml version="1.0"?>
<assembly
	xmlns="http://maven.apache.org/assembly/1.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/assembly/1.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
	<formats>
		<format>
			tar.bz2
		</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>classes</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>