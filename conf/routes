# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Commands
POST        /commands/initialise                 controllers.Commands.initialise()
POST        /commands/checkout                   controllers.Commands.checkout()
POST        /commands/checkin                    controllers.Commands.checkin()
POST        /commands/own                        controllers.Commands.own()
POST        /commands/unown                      controllers.Commands.unown()

# Configuration

GET         /conf                                controllers.Conf.configuration()

# Music files
GET         /music/:user/*file                   controllers.Music.music(user, file)
GET         /tags/:user/*file                    controllers.Music.tags(user, file)
GET         /artwork/:user/*file                 controllers.Music.artwork(user, file)

# changes
GET         /changes/count/:user/:since          controllers.Changes.countChanges(user, since)
GET         /changes/:user/:since                controllers.Changes.changes(user, since)

GET         /changelog/count/:user/:since        controllers.Changes.countChangelog(user, since)
GET         /changelog/:user/:page/:limit        controllers.Changes.changelog(user, page: Int, limit: Int)
