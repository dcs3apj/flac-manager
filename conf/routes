# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Commands
POST        /initialise              @controllers.Commands.initialise()
POST        /checkout                 @controllers.Commands.checkout()
POST        /checkin                  @controllers.Commands.checkin()
POST        /sync                     @controllers.Commands.sync()
POST        /own                      @controllers.Commands.own()
POST        /unown                    @controllers.Commands.unown()

# Configuration

GET         /conf                     @controllers.Conf.configuration()

# Music files
GET         /music/:user/*file        @controllers.Music.at(user, file)
GET         /tags/:user/*file        @controllers.Music.tags(user, file)
# changes
GET         /changes/:user/:since     @controllers.Music.changes(user, since)
