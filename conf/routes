# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Commands
POST        /commands                            controllers.Commands.commands()

# Configuration

GET         /conf                                controllers.Conf.configuration()

# Music files
GET         /music/:user/:extension/*file                   controllers.Music.music(user, extension, file)
GET         /tags/:user/:extension/*file                    controllers.Music.tags(user, extension, file)
GET         /artwork/:user/:extension/*file                 controllers.Music.artwork(user, extension, file)

# changes
GET         /changes/:user/:extension/:since                controllers.Changes.changes(user, extension, since)
GET         /changelog/:user/:extension/:since              controllers.Changes.changelog(user, extension, since)

# pretty!

GET         /                                    controllers.Index.index()
GET         /index.html                          controllers.Default.redirect(to = "/")
GET         /assets/*file                        controllers.Assets.at(path="/public", file)
GET         /*file                               controllers.Icons.at(path="/public/images", file)