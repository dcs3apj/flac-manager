<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.artwork img {
			width: 500px;
			height: 500px;
		}
	</ui:style>

  <g:DecoratorPanel>
  	<g:VerticalPanel>
  		<g:Image ui:field="artworkImage" addStyleNames="{style.artwork}"/>
  		<g:Label>Artist</g:Label>
  		<g:TextBox ui:field="artist"/>
  		<g:Label>Album</g:Label>
  		<g:TextBox ui:field="album"/>
  		<g:SubmitButton ui:field="searchButton">Search</g:SubmitButton>
  		<g:Label>URL</g:Label>
  		<g:TextBox ui:field="url"/>
  		<g:SubmitButton ui:field="urlButton">Use URL</g:SubmitButton>
  		<g:Label>Upload</g:Label>
  		<g:FileUpload ui:field="fileUpload"/>
  	</g:VerticalPanel>
  </g:DecoratorPanel>
</ui:UiBinder> 