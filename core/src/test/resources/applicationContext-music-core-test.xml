<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
  default-autowire="byName">

	<bean id="musicHibernateProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
  		<props>
        <prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
        <prop key="hibernate.hbm2ddl.auto">update</prop>
        <prop key="hibernate.show_sql">true</prop>
     </props>		
		</property>
	</bean>

	<bean id="musicDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
		<property name="url" value="jdbc:hsqldb:."/>
		<property name="username" value="sa"/>
		<property name="password" value=""/>
	</bean>

	<bean id="flacDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://localhost/slimserver"/>
		<property name="username" value="slimserver"/>
		<property name="password" value="slimserver"/>
	</bean>	
	
	<bean id="maximumTrackDataLength" class="java.lang.Integer">
		<constructor-arg value="32768"/>
	</bean>
	
	<bean id="deviceService" class="uk.co.unclealex.music.core.service.TestDeviceService"/>
	
	<bean id="slimServerConfig" class="uk.co.unclealex.music.core.TestSlimServerConfig">
		<property name="definiteArticles">
			<list>
				<value>The</value>
			</list>
		</property>
	</bean>
	
	<bean id="abstractRepositoryManager" class="uk.co.unclealex.music.core.service.filesystem.TestRepositoryManager" abstract="true">
		<property name="baseDirectory" value="/"/>
	</bean>
	
	<bean id="fileSystemTitleFormats" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>${ext}/${1:artist}/${artist}/${album}/${2:track} - ${title}.${ext}</value>
			</list>
		</property>
	</bean>

</beans>

